# ===========================================
# Sistema de Seguridad IoT - Variables de Entorno
# ===========================================
# Copiar este archivo a .env y modificar los valores

# ----- Base de Datos PostgreSQL -----
POSTGRES_DB=iot_security
POSTGRES_USER=iot_user
POSTGRES_PASSWORD=cambiar_password_seguro

# ----- Flask Backend -----
FLASK_ENV=development
JWT_SECRET_KEY=generar-clave-secreta-muy-larga-y-segura

# ----- MQTT Broker -----
MQTT_BACKEND_USER=backend
MQTT_BACKEND_PASSWORD=backend_password_seguro
MQTT_WORKER_USER=worker
MQTT_WORKER_PASSWORD=worker_password_seguro
MQTT_DEVICE_USER=device
MQTT_DEVICE_PASSWORD=device_password_seguro
MQTT_CAMERA_USER=camera
MQTT_CAMERA_PASSWORD=camera_password_seguro

# ----- Servicio de IA -----
AI_CONFIDENCE_THRESHOLD=0.7

# ----- URLs de Servicios (para desarrollo local sin Docker) -----
# DATABASE_URL=postgresql://iot_user:password@localhost:5432/iot_security
# MQTT_BROKER=localhost
# MQTT_PORT=1883

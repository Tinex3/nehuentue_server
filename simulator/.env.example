# Configuración del Simulador IoT

# MQTT Broker
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USER=iot_system
MQTT_PASSWORD=iot_password_123

# API Backend
API_URL=http://localhost:5000/api

# AI Service (para pruebas directas)
AI_SERVICE_URL=http://localhost:5001

# Dispositivo simulado
DEVICE_ID=1
ZONE_ID=1
DEVICE_NAME=SimuladorPC

# Carpeta de imágenes a enviar
IMAGES_FOLDER=./images

# Intervalo de telemetría (segundos)
TELEMETRY_INTERVAL=10

# Intervalo de movimiento simulado (segundos)
MOTION_INTERVAL=30
